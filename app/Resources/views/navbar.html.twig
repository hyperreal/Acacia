<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">{{ 'navbar.navigation-toggle'|babel }}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <b><i><a class="navbar-brand" href="{{ url('_welcome') }}">
		<span class="step size-18"><i class="icon ion-flask"></i></span>
                 {{ 'navbar.title'|babel }}
            </a></i></b>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted("ROLE_USER") %}
                    <li class="navbar-text hidden-xs hidden-sm"><span class="glyphicon glyphicon-user"></span>
                        {{ 'navbar.login-info'|babel({'%user%': app.user.username})|raw }}
                    </li>
                    <li class="divider hidden-xs hidden-sm"></li>
                    <li>
                        <a href="{{ url('fos_user_profile_edit') }}">
                            <span class="glyphicon glyphicon-wrench"></span>
                             {{ 'navbar.edit-profile'|babel|lower }}</a>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}">
                            <span class="glyphicon glyphicon-log-out"></span>
                             {{ 'navbar.logout'|babel|lower }}
                        </a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('fos_user_security_login') }}">
                            <span class="glyphicon glyphicon-log-in"></span>
                             {{ 'navbar.login'|babel }}</a>
                    </li>
		<!-- Registration is not allowed for Hyperreal, but you can uncomment it here if you need built-in auth system
                    <li>
                        <a href="{{ path('fos_user_registration_register') }}">
                            <span class="glyphicon glyphicon-user"></span>
                             {{ 'navbar.register'|babel }}</a>
                    </li>
		-->
                {% endif %}
            </ul>
        </div>

    </div>
</div>
